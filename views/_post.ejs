<li id="post-<%=post._id%>" class="posts">
    <p> 
       <% if((locals.user) && (locals.user.id==post.user.id)){ 
           %>
        <small>

            <a    class="delete-post-button" href="post/destroy/<%=post.id%>">delte</a>
           
        </small>
        <%}%>
<%if(locals.user){%>
    
        <a  class="like_button" href="likes/toggle/?id=<%=post.id%>&&type=Post">Like</a>
        <%}%>
        <%if(post.likes){%>
        <p id="total_likes-<%=post.id%>"><%=post.likes.length%> Likes</p>
        <%}%>
     <%=post.content%> <br>
     <small>
    
       By:<%=post.user.name%>
     </small>
     
    </p>
    <div class="post-comments">
        <% if (locals.user){ %>
        <form action="/comment/add" method="POST" id="post-<%= post._id %>-comments-form" data="<%=post.id%>">
            <input type="text" name="comment">
            <input type="hidden" name="post" value="<%=post._id%>">
            <button type="submit">comment</button>
        </form>
        <%
    }%>
      
    <div class="post-comments-list">
        <ul id="post-comments-<%= post._id %>">
           <% for(comment of post.comments){%>
          
            <%- include('_comment'); %>
        
        <%}%>
    </ul>
       </div>
       </div>
    </li>
   <script src="js/likes.js"></script>
  
  
